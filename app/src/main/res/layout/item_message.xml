<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <TextView
        android:id="@+id/tv_message_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상대방"
        android:textSize="14sp"
        android:textColor="@color/font"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tv_message_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="변형된 글로스 부분"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:background="@drawable/shape_messagebox"
        app:layout_constraintTop_toBottomOf="@id/tv_message_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_message_transform"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/ic_transform"
        app:layout_constraintStart_toEndOf="@id/tv_message_message"
        app:layout_constraintTop_toTopOf="@id/tv_message_message"
        app:layout_constraintBottom_toBottomOf="@id/tv_message_message"
        android:layout_marginStart="4dp"/>
    <VideoView
        android:id="@+id/iv_message_handsign"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:elevation="5dp"
        android:visibility="gone"
        android:background="@drawable/shape_roundbox_10"
        app:layout_constraintTop_toBottomOf="@id/tv_message_message"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>