<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <ImageView
        android:id="@+id/iv_usermessage_handsign"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:elevation="5dp"
        android:visibility="gone"
        android:background="@drawable/shape_roundbox_10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tv_usermessage_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안녕하세요"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:background="@drawable/shape_usermessagebox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_usermessage_handsign"
        android:layout_marginTop="12dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_usermessage_sound"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/ic_tts"
        app:layout_constraintEnd_toStartOf="@id/tv_usermessage_message"
        app:layout_constraintTop_toTopOf="@id/tv_usermessage_message"
        app:layout_constraintBottom_toBottomOf="@id/tv_usermessage_message"
        android:layout_marginEnd="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>