<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.GuideFragment">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <!-- 첫 번째 아이템 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_guide_1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="15dp"
        android:background="@drawable/shape_roundborder_10">

            <ImageView
                android:id="@+id/btn_guide_translate_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_transform"
                android:layout_marginStart="88dp"/>

            <TextView
                android:id="@+id/tv_guide_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="길찾기"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/iv_guide_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/img_map"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <!-- 세 번째 아이템 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_guide_2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="15dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shape_roundborder_10">

            <ImageView
                android:id="@+id/btn_guide_translate_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_transform" />

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/btn_guide_translate_2"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_guide_title_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="도움\n요청하기"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_guide_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/img_help" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_guide_3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_roundborder_10">

            <ImageView
                android:id="@+id/btn_guide_translate_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_transform" />

            <TextView
                android:id="@+id/tv_guide_title_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="돈\n거래하기"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_guide_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/img_money" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 네 번째 아이템 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_guide_4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_roundborder_10">

            <ImageView
                android:id="@+id/btn_guide_translate_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_transform" />

            <TextView
                android:id="@+id/tv_guide_title_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="물건\n구매하기"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/iv_guide_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/img_shop" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 다섯 번째 아이템 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_guide_5"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_roundborder_10">

            <ImageView
                android:id="@+id/btn_guide_translate_5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_transform" />

            <TextView
                android:id="@+id/tv_guide_title_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일상 대화\n나누기"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/iv_guide_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/img_chat" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
